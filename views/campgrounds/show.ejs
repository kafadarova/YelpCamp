<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p lass="lead">Yelp Camp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 2</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image %>">
        <div class="caption">
          <h4 class="pull-right">$<%= campground.price %></h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <div class="pull-right">
              <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#campgroundLikes">
                  <span>Total likes: <i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
              </button>
          </div>
          <div style="padding-bottom: 10px;">
            <form action="/campgrounds/<%= campground._id %>/like" method="POST">
                <div class="btn-group">
                    <% if (currentUser && campground.likes.some(function (like) {
                        return like.equals(currentUser._id)
                    })) { %>
                    <button class="btn btn-sm btn-primary">
                        <i class="fas fa-thumbs-up"></i> Liked (<%= campground.likes.length %>)
                    </button>
                    <% } else { %>
                    <button class="btn btn-sm btn-secondary">
                        <i class="fas fa-thumbs-up"></i> Like (<%= campground.likes.length %>)
                    </button>
                    <% } %>
                    <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#campgroundLikes">See more details
                    </button>
                  </div>
                </form>
            </div>
          <p><%= campground.description %></p>
          <p>
            <em>Submitted By <%= campground.author.username %></em>
          </p>
          <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
          <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground.slug %>/edit">Edit</a>
          <form class="detele-form" action="/campgrounds/<%= campground.slug %>?_method=DELETE" method="post">
            <button class="btn btn-xs btn-danger">Delete</button>
          </form>
            <% } %>
        </div>
      </div>
      <div class="well">
        <div class='text-right'>
          <a class="btn btn-success" href="/campgrounds/<%= campground.id %>/comments/new">Add New Comment</a>
        </div>
        <hr>
        <% campground.comments.forEach((comment) => { %>
          <div class="row">
            <div class="col-md-12">
            <strong><%= comment.author.username %></strong> 
              <span class="pull-right">10 days ago</span>
              <p><%= comment.text %></p>
              <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
              <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground.slug%>/comments/<%= comment._id%>/edit">
                Edit
              </a>
              <form class="detele-form" action="/campgrounds/<%= campground.slug%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
              </form>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>